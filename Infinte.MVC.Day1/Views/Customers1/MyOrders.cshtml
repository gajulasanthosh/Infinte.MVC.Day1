@model Infinte.MVC.Day1.Models.MyOderDetailsViewModel

@{
    ViewBag.Title = "MyOrders";
}

<h2>Order Details</h2>

<h3>@Model.CustomerName</h3>
<hr />
<div class="row">
    <div class="col-md-4">



        <table class="table">
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quanity</th>
            </tr>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.Price</td>
                    <td>@product.Quantity</td>
                </tr>
            }

        </table>
    </div>
</div>